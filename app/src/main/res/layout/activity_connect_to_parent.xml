<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.parent.kid.ConnectToParentActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phone_no_of_child"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your number"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your parent number"
        android:id="@+id/textView2"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/phone_no_of_child"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phone_no_to_connect_text"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/phone_no_of_child"
        android:layout_alignStart="@+id/phone_no_of_child"
        android:layout_marginTop="31dp"
        android:layout_alignRight="@+id/phone_no_of_child"
        android:layout_alignEnd="@+id/phone_no_of_child" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/connect_activity_button"
        android:layout_below="@+id/phone_no_to_connect_text"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="36dp"
        android:onClick="onConnectClick" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/connect_app_progressbar"
        android:layout_alignLeft="@+id/phone_no_of_child"
        android:layout_alignStart="@+id/phone_no_of_child"
        android:layout_alignRight="@+id/phone_no_of_child"
        android:layout_alignEnd="@+id/phone_no_of_child"
        android:layout_alignBottom="@+id/phone_no_to_connect_text"
        android:layout_alignTop="@+id/textView"
        android:visibility="invisible"
        android:indeterminate="false" />
</RelativeLayout>
